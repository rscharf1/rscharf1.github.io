{% macro person(name, position, image, bio) %}
<div x-data="{ open: false }" class="relative">
  <!-- Card -->
  <div class="bg-gray-50 rounded-lg shadow-md p-6 flex flex-col items-center text-center">
    <img src="{{ image }}" alt="{{ name }}" class="w-32 h-32 rounded-full object-cover mb-4" />
    <h3 class="text-lg font-semibold text-gray-900 mb-2">{{ name }}</h3>
    <p class="text-sm text-gray-600 mb-4">{{ position }}</p>
    <button @click="open = true" class="text-sm font-medium text-purple-700 hover:underline">Read more â†’</button>
  </div>

  <!-- Modal -->
  {# <div x-show="open" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center" x-cloak> #}
<div x-show="open"
     class="fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center px-4"
     x-cloak>
  <div class="bg-white rounded-lg shadow-lg max-w-3xl w-full p-6 relative flex flex-col md:flex-row gap-6 items-start">
    
    <!-- Close Button -->
    <button @click="open = false" class="absolute top-3 right-3 text-gray-500 hover:text-gray-700 text-xl">&times;</button>
    
    <!-- Left: Text content -->
    <div class="flex-1">
      <h3 class="text-2xl font-bold text-gray-900 mb-2">{{ name }}</h3>
      <p class="text-base text-gray-700 mb-4">{{ position }}</p>
      <p class="text-sm text-gray-600">{{ bio }}</p>
    </div>

    <!-- Right: Image -->
    <div class="w-full md:w-1/3">
      <img src="{{ image }}" alt="{{ name }}" class="rounded-lg w-full h-auto object-cover" />
    </div>
  </div>
</div>

</div>
{% endmacro %}